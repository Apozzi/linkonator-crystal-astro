---
import "../styles/global.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
const sess = Astro.session;
const userData = sess ? await sess.get("user") : {};
---

<!DOCTYPE html>
<html lang="pt-BR" class="scroll-smooth">
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=VT323&display=swap" rel="stylesheet">
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <script src="https://unpkg.com/htmx.org@2.0.0"></script>
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
  </head>
  <body class="crt bg-gradient-to-br from-purple-600 via-pink-500 to-red-500 min-h-screen public-layout">
    <div class="flex flex-col min-h-screen">

      <header class="bg-black bg-opacity-30 backdrop-blur-md text-white py-4">
        <div class="max-w-4xl mx-auto px-6 flex justify-between items-center">
          <a href="/" class="text-2xl font-bold">Linkonator</a>
          <a href="/" class="hover:underline">{userData ? userData.username : "Entrar"}</a>
        </div>
      </header>

      <main class="flex-1 flex items-center justify-center px-6">
        <slot />
      </main>

      <footer class="text-white text-center py-6 text-sm">
        Â© 2025 Linkonator - Pozzi
      </footer>
    </div>
  </body>
</html>